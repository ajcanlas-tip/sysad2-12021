---
- name: pre-requisite elastic stack
  yum:
    name: java-11-openjdk-devel
    state: latest
    update_cache: yes

- name: elastic search repository install
  yum_repository:
    name: elastic_7.X_repo
    baseurl: https://artifacts.elastic.co/packages/7.x/yum
    gpgcheck: yes
    gpgkey: https://artifacts.elastic.co/GPG-KEY-elasticsearch
    enabled: yes
    desc: Elastic 7.x repo

- name: key rpm
  rpm_key:
    key: https://artifacts.elastic.co/GPG-KEY-elasticsearch
    state: present

- name: elastic search install
  yum:
    name: elasticsearch
    state: latest
    update_cache: yes

- name: net host
  lineinfile:
    dest: /etc/elasticsearch/elasticsearch.yml
    regexp: 'network.host'
    line: 'network.host: localhost'

- name: http port
  lineinfile:
    dest: /etc/elasticsearch/elasticsearch.yml
    regexp: 'http.port'
    line: 'http.port: 9200'

- name: elastic search begin
  service:
    name: elasticsearch
    state: started
    update_cache: yes

- name: logstash install
  yum:
    name: logstash
    state: latest
    update_cache: yes

- name: http host
  lineinfile:
    dest: /etc/logstash/logstash.yml
    regexp: 'http.host'
    line: 'http.host: 127.0.0.1'

- name: logstasssh start
  service:
    name: logstash
    state: started
    update_cache: yes

- name: kibana install
  yum:
    name: kibana
    state: latest
    update_cache: yes

- name: server host
  lineinfile:
    dest: /etc/kibna/kibana.yml
    regexp: 'server.host'
    line: 'server.host: "0.0.0.0"'

- name: server port
  lineinfile:
    dest: /etc/kibana/kibana.yml
    regexp: 'server.port'
    line: 'server.port: 5601'

- name: configuration file
  lineinfile:
    dest: /etc/kibana/kibana.yml
    regexp: 'elasticsearch.hosts:'
    line: 'elasticsearch.hosts: [http://localhost:9200"]'

- name: kibana beginning
  service:
    name: kibana
    state: started
    update_cache: yes
#
