- name: Install Java
  host: all

  tasks:
   - name: install1
     pip:
       name:
         - ansible
	 - boto
	 - python-openstackclient

- name: Install in centOS
  hosts: centos

  tasks:
    - name: install2
      become: yes
      yum:
        name: java-1.8.0-openjdk
	state: present
	update_cache: yes

- name: Install in Ubuntu
  hosts: ubuntu

  tasks:
    - name: install2
      become: yes
      apt:
        name:default-jre
	state: present
