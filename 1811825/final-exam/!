---
- name: packages install
  zypper:
    name:
      - apache2
      - apache2-mod_php7
      - gcc
      - gd
      - glibc
      - perl
      - php7
      - unzip
    state: latest

- name: php7 enable
  shell: 'a2enmod php7'

- name: nagios group
  group:
    name: nagiosgrp
    state: present

- name: nagcmd grp
  group:
    name: nagcmdgrp
    state: present

- name: nagadmin grp
  group:
    name: nagadmingrp
    state: present

- name: nagios user
  user:
    name: nagios
    comment: nagios user
    group: nagadmingrp

- name: wwwrun for external command
  user:
    name: wwwrun
    group: nagadmingrp

- name: downloads directory
  file:
    path: /downloads
    state: directory

- name: nagios download
  get_url:
    url: http://prdownloads.sourceforge.net/sourceforge/nagios/nagios-4.2.1.tar.gz
    dest: /downloads


- name: nagios core extraction
  unarchive:
    src: /downloads/nagios-4.2.1.tar.gz
    dest: /downloads
    remote_src: yes


- name: host directory
  file:
    path: /etc/httpd/conf.d
    state: directory

- name: nagios config
  shell: ./configure --with-command-group=nagcmdgrp --with-command-group=nagcmdgrp -with-httpd_conf=/etc/httpd/conf.d
  args:
    chdir: /downloads/nagios-4.2.1

- name: init installation
  make:
    chdir: /downloads/nagios-4.2.1
    target: install-init

- name: config files
  make:
    chdir: /downloads/nagios-4.2.1
    target: install-config

- name: set permission install
  make:
    chdir: /downloads/nagios-4.2.1
    target: install-commandmode

- name: web interface install
  make:
    chdir: /downloads/nagios-4.2.1
    target: install-webconf

- name: py3 install
  zypper:
    name: python3-pip
    state: latest

- name: htpasswd module
  pip:
    name: passlib
    state: latest

- name: nagios account
  htpasswd:
    path: /usr/local/nagios/etc/htpasswd.users
    name: nagiosadmin
    password: '{{ nagadmin_pass }}'

- name: apache2 restart
  service:
    name: apache2
    state: reloaded

